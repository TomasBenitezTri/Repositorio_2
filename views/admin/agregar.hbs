<div>
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Agregar nueva novedad</h1>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo" style="resize: none;"></textarea>
                </div>
               
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo" style="resize:none ;"></textarea>    
                </div>
                 <h1>
                    <label>Imagen: </label> 
                    <input type="file" name="imagen" id="imagen">
                </h1>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
                <p style="color:red ;">{{menssage}}</p>
            {{/if}}

        </div>
    </div>
</div>